{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "blocks": [
    {
      "alignment": "left",
      "segments": [
        {
          "foreground": "#B4BEFE", 
          "style": "plain",
          "template": "<#F28FAD>\u276f</><#ABE9B3>\u276f</>",
          "type": "text"
        },
        {
          "foreground": "#94E2D5",
          "properties": {
            "style": "folder"
          },
          "style": "plain",
          "template": " {{ .Path }} ",
          "type": "path"
        },
        {
          "foreground": "#F28FAD", 
          "properties": {
            "branch_icon": "",
            "fetch_status": false
          },
          "style": "plain",
          "template": "<#F5C2E7>git:(</>{{ .HEAD }}<#F5C2E7>)</> ",
          "type": "git"
        }
      ],
      "type": "prompt"
    },
    {
      "alignment": "right",
      "segments": [
        {
          "foreground": "#f38ba8", 
          "style": "plain",
          "template": "{{.String}} ",
          "type": "status"
        },
        {
          "type": "executiontime",
          "style": "plain",
          "foreground": "#45475a",
          "template": "{{ .FormattedMs }} ",
          "properties": {
            "threshold": 500,
            "style": "austin",
            "always_enabled": true
          }
        }
      ],
      "type": "rprompt"
    }
  ],
  "version": 3
}

